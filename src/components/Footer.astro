---
import { cn } from "@/lib/utils";

type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<footer class={cn("border-t", className)}>
  <div
    class="container ml-10 grid grid-cols-1 gap-6 py-14 sm:grid-cols-2 md:grid-cols-5"
  >
    <div>
      <span class="text-foreground text-sm font-medium"> Follow Us </span>
      <ul class="mt-4 list-inside space-y-3">
        <li>
          <a
            href="{link.href}"
            class="text-muted-foreground hover:text-primary text-sm"
          >
            Linkedin
          </a>
        </li>
        <li>
          <a
            href="{link.href}"
            class="text-muted-foreground hover:text-primary text-sm"
          >
